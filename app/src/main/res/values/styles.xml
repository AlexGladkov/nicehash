<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
    </style>

    <style name="DarkTransparent" parent="TransparentTheme">
        <item name="colorBackgroundPrimary">@color/dark_background_primary</item>
        <item name="colorBackgroundSecondary">@color/dark_background_secondary</item>
        <item name="iconTint">@color/dark_tint_color</item>
        <item name="dividerColor">@color/dark_divider_color</item>
        <item name="textColorPrimary">@color/dark_text_color_primary</item>
        <item name="textColorSecondary">@color/dark_text_color_secondary</item>
        <item name="textColorThird">@color/dark_text_color_third</item>
        <item name="textColorHint">@color/text_color_hint</item>
        <item name="textColorHighlight">@color/dark_text_color_highlight</item>

        <item name="marginStartPickerInverse">@dimen/theme_inverse_margin</item>
        <item name="marginEndPickerInverse">@dimen/theme_inverse_margin_zero</item>
        <item name="buttonRipple">@drawable/dark_ripple_pressed</item>
        <item name="aboutBackgroundResource">@drawable/dark_about_header</item>
        <item name="chartSelectionBackgroundResource">@drawable/dark_chart_time_background</item>
    </style>

    <style name="LightTransparent" parent="TransparentTheme">
        <item name="colorBackgroundPrimary">@color/light_background_primary</item>
        <item name="colorBackgroundSecondary">@color/light_background_secondary</item>
        <item name="iconTint">@color/light_tint_color</item>
