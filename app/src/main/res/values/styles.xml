        <item name="textColorSecondary">@color/light_text_color_secondary</item>
        <item name="textColorThird">@color/light_text_color_third</item>
        <item name="textColorHint">@color/text_color_hint</item>
        <item name="textColorHighlight">@color/light_text_color_highlight</item>

        <item name="marginStartPickerInverse">@dimen/theme_inverse_margin_zero</item>
        <item name="marginEndPickerInverse">@dimen/theme_inverse_margin</item>
        <item name="buttonRipple">@drawable/light_ripple_pressed</item>
        <item name="aboutBackgroundResource">@drawable/light_about_header</item>
        <item name="chartSelectionBackgroundResource">@drawable/light_chart_time_background</item>
